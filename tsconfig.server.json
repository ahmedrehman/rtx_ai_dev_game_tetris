{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist/server",
    "rootDir": "./src/server",
    "sourceMap": true
  },
  "include": ["src/server/**/*"],
  "exclude": ["node_modules"]
}
