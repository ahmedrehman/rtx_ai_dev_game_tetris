{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Dev (Vite)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["vite"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["tsx", "src/server/index.ts"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PORT": "3131"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    }
  ],
  "compounds": [
    {
      "name": "Full Stack (Vite + Server)",
      "configurations": ["Dev (Vite)", "Server"]
    }
  ]
}
